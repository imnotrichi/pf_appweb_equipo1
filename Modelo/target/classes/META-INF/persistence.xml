<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.2" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence           http://xmlns.jcp.org/xml/ns/persistence/persistence_2_2.xsd">
  <persistence-unit name="TheMusicHubPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>org.itson.aplicacionesweb.themusichub.entidades.Usuario</class>
    <class>org.itson.aplicacionesweb.themusichub.entidades.Comentario</class>
    <class>org.itson.aplicacionesweb.themusichub.modelo.Administrador</class>
    <class>org.itson.aplicacionesweb.themusichub.modelo.Anclado</class>
    <class>org.itson.aplicacionesweb.themusichub.modelo.Comentario</class>
    <class>org.itson.aplicacionesweb.themusichub.modelo.Comun</class>
    <class>org.itson.aplicacionesweb.themusichub.modelo.Estado</class>
    <class>org.itson.aplicacionesweb.themusichub.modelo.Municipio</class>
    <class>org.itson.aplicacionesweb.themusichub.modelo.Normal</class>
    <class>org.itson.aplicacionesweb.themusichub.modelo.Post</class>
    <class>org.itson.aplicacionesweb.themusichub.modelo.Usuario</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/themusichub_database?zeroDateTimeBehavior=CONVERT_TO_NULL"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.password" value="itson"/>
      <property name="javax.persistence.schema-generation.database.action" value="create"/>
    </properties>
  </persistence-unit>
</persistence>
